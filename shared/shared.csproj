<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LiteNetLib" Version="0.8.3.1" />
    <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
  </ItemGroup>

  <Target Name="GenerateCode" BeforeTargets="BeforeBuild">
    <Exec
      Command='py src/scripts/keyboardCodeGenerator.py "./src/core/(auto generated) Keyboard.cs"'
    />
    <Exec
      Command='py ./src/scripts/cardCodeGenerator.py "./src/core/(auto generated) Card.cs" src/data/CardImplementations.cs'
    />
  </Target>

</Project>
